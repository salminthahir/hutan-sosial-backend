{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/node_modules/pg/**",
                    "backend/node_modules/pg-hstore/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/admin",
            "dest": "/backend/admin/index.html"
        },
        {
            "src": "/admin/(.*)",
            "dest": "/backend/admin/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/backend/server.js"
        }
    ]
}